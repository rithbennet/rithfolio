---
import BaseLayout from "../layouts/BaseLayout.astro";
import SkillsSection from "../components/SkillsSection.astro";

const baseUrl = (
  import.meta.env.SITE_URL ||
  Astro.site?.toString() ||
  "https://rith.dev"
).replace(/\/$/, "");
---

<BaseLayout
  title="Skills & Expertise"
  description="A comprehensive showcase of my technical skills, leadership abilities, and management expertise"
  canonical={`${baseUrl}/skills`}
  ogTitle="Skills & Expertise | Rithfolio"
  ogDescription="A comprehensive showcase of my technical skills, leadership abilities, and management expertise"
  ogUrl={`${baseUrl}/skills`}
>
  <main class="container mx-auto px-4 py-8">
    <h1 class="mb-6 text-3xl font-bold md:text-4xl lg:text-5xl">
      Skills & Expertise
    </h1>

    <div class="mb-8 space-y-4">
      <p class="text-muted-foreground text-lg">
        My professional toolkit combines strong technical development skills
        with proven leadership and project management abilities.
      </p>

      <div class="grid gap-6 md:grid-cols-2">
        <div
          class="border-border/50 bg-card space-y-2 rounded-lg border p-4 shadow-sm"
        >
          <h2 class="text-xl font-medium">Technical Proficiency</h2>
          <p class="text-muted-foreground text-sm">
            From frontend frameworks like React and Next.js to backend
            technologies including Go and Java, I build scalable, maintainable
            applications with modern tools and best practices.
          </p>
        </div>
        <div
          class="border-border/50 bg-card space-y-2 rounded-lg border p-4 shadow-sm"
        >
          <h2 class="text-xl font-medium">Leadership & Management</h2>
          <p class="text-muted-foreground text-sm">
            I've led development teams using Agile methodologies, particularly
            Scrum, to deliver projects on time while maintaining code quality
            and team collaboration.
          </p>
        </div>
      </div>
    </div>

    <SkillsSection />
  </main>
</BaseLayout>
