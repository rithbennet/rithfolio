---
import BaseLayout from "../layouts/BaseLayout.astro";
import { ContactForm } from "../components/contact/contact-form";
import ContactInfo from "../components/ContactInfo.astro";

const baseUrl = (
  import.meta.env.SITE_URL ||
  Astro.site?.toString() ||
  "https://rith.dev"
).replace(/\/$/, "");
---

<BaseLayout
  title="Contact Me"
  description="Connect with me for development opportunities, project collaborations, or professional inquiries"
  canonical={`${baseUrl}/contact`}
  ogTitle="Contact Me | Rithfolio"
  ogDescription="Connect with me for development opportunities, project collaborations, or professional inquiries"
  ogUrl={`${baseUrl}/contact`}
>
  <main class="container mx-auto px-4 py-8">
    <h1 class="mb-6 text-3xl font-bold md:text-4xl lg:text-5xl">
      Get In Touch
    </h1>

    <div class="mb-8 space-y-4">
      <p class="text-muted-foreground text-lg">
        I'm always interested in new opportunities, challenging projects, and
        connecting with fellow professionals.
      </p>

      <div class="grid gap-4 md:grid-cols-3">
        <div class="border-border/50 bg-card rounded-lg border p-4 shadow-sm">
          <h3 class="text-lg font-medium">Development Opportunities</h3>
          <p class="text-muted-foreground text-sm">
            Looking for a skilled developer with management experience? Let's
            discuss how I can contribute to your team.
          </p>
        </div>
        <div class="border-border/50 bg-card rounded-lg border p-4 shadow-sm">
          <h3 class="text-lg font-medium">Project Collaboration</h3>
          <p class="text-muted-foreground text-sm">
            Have an interesting project in mind? I'm open to collaborations that
            leverage my technical and leadership skills.
          </p>
        </div>
        <div class="border-border/50 bg-card rounded-lg border p-4 shadow-sm">
          <h3 class="text-lg font-medium">Professional Networking</h3>
          <p class="text-muted-foreground text-sm">
            Connect with me on social media to stay updated on my latest
            projects and professional journey.
          </p>
        </div>
      </div>
    </div>

    <div class="grid gap-6 md:grid-cols-2">
      <ContactForm client:load />
      <ContactInfo />
    </div>
  </main>
</BaseLayout>
